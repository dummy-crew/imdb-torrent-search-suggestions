{
  "name": "IMDb Torrent Search Suggestions",
  "description": "You see a title on IMDb that you like, search the major torrent providers!",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    128: "icon128.png",
    48: "icon48.png",
    32: "icon32.png",
    16: "icon16.png"
  },
  "options_page": "options.html",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["https://www.imdb.com/*"]
}
